    ViewBag.Title = "listproduct";
}
<br/>

<h2 style="text-align:center; color:forestgreen" class="alert alert-success" role="alert">PRODUCT LIST</h2>
<br />

<div>

    @foreach (var item in Model)
    {
    <div class="col-md-3">
        <p> <img src="C:\Users\cakir\Desktop\damacana1.png" width=255 height=255></p>
        <p class="alert alert-warning" role="alert" style="text-align:center">
